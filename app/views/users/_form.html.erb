<div class="container">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= @user.errors.full_messages.first %>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <td><%= f.label :first_name %></td>
      <td><%= f.text_field :first_name, :class => "form-control", :required => true %></td>
      <td class="require_field">*</td>
    </tr>
    <tr>
      <td><%= f.label :last_name %></td>
      <td><%= f.text_field :last_name, :class => "form-control", :required => true %></td>
      <td class="require_field">*</td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password, :class => "form-control", :required => true %></td>
      <td class="require_field">*</td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email, :class => "form-control", :required => true %></td>
      <td class="require_field">*</td>
    </tr>
    <tr>
      <td><%= f.label :user_name %></td>
      <td><%= f.text_field :user_name, :class => "form-control", :required => true %></td>
      <td class="require_field">*</td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit class: "btn btn-info btn-block" %>
  </div>
<% end %>
</div>