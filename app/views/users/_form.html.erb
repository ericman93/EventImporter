<% content_for :stylesheets do %>
    <%= stylesheet_link_tag "register" %>
<% end %>

<% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= @user.errors.full_messages.first %>
    </div>
  <% end %>
<div id="wrapper" class="container">

    <%= form_for(@user, html: {:class => 'login-form'}) do |f| %>

        <%= f.text_field :first_name, :class => "input form-control", :placeholder => "First name", :required => true %>       
      <%= f.text_field :last_name, :class => "input form-control", :placeholder => "Last name", :required => true %>       
      <%= f.text_field :user_name, :class => "input form-control", :placeholder => "Username" ,:required => true, :pattern => '[^-\s]*', :title => 'Spaces are not allowed' %>       
      <%= f.email_field :email, :class => "input form-control", :placeholder => "Email", :required => true %>
      <%= f.password_field :password, :class => "input form-control", :placeholder => "Password", :required => true %>  
      
      <%= fields_for :registration_key do |r| %>
            <%= r.text_field :key, :class => "input form-control", :placeholder => "Key", :required => true %>  
      <% end %> 

      <%= f.submit 'Register', :class => 'btn btn-success btn-block' %>
    
    <% end %>

</div>
