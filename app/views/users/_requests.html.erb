<% @requests.each do |request| %>
	<div class="request container">
		<p class="new_request"><strong><%= request.return_name %> ( <%= request.return_mail %> ) has sent you new meeting request </strong> </p>

		<div id="meta_data col-lg-5 well">
            <table id="">
                <tr>
                    <td>Title</td>
                    <td><%= request.subject %></td>
                </tr>
                <tr>
                    <td>Location</td>
                    <td><%= request.location %></td>
                </tr>
            </table>
        </div>

		<div class="table col-lg-5">
            <table class="table">
                <tr>
                    <td>Start</td>
                    <td>End</td>
                    <td>Approve</td>
                </tr>
               <% request.request_proposals.each do |proposal| %>
		            <tr>
                        <td class="time"><%= proposal.start_time %></td>
                        <td class="time"><%= proposal.end_time %></td>
                        <td>
                           <input type="button" class="btn" value=":)" />
                        </td>
		            </tr>
	            <% end %>
            </table>
        </div>

	</div>
<% end %>