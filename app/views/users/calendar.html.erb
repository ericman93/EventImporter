<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "fullcalendar" %>
	<%= stylesheet_link_tag "calendar" %>
<% end %>
<% content_for :javascripts do %>
	<%= javascript_include_tag "fullcalendar.min" %>
	<%= javascript_include_tag "calendar" %>
	<%= javascript_include_tag "calendar_work_day" %>
<% end %>

<% is_self_user = !(@current_user.nil?) and @user == @current_user.email %>
<script>
	$(document).ready(function () {
	        var user_mail = '<%= @user %>';
	        //var is_user_specifed = check_if_user_null(user_mail)

	        load_event_to_calendar(user_mail, true, <%= is_self_user %>);

	        $('.importer').change(function () {

	            //$(this).closest("form").ajaxForm();
	            $(this).closest("form").submit();
	        });
	    });
</script>

<div class="container-fluid">
	<div class="row-fluid">
		<div id='calendar' class="span<%= is_self_user ? '12' : '9' %>"></div>

		<% if !is_self_user %>
		<div id="temp_events" class="span3">
			<form action="javascript:void(0);" onsubmit="send_to_server()">
				<u><h1>New Event Proposal</h1></u>
				<table>
					<tr>
						<td>Subject : </td>
						<td><input id="event_subject_input" type="text" placeholder="enter subject here" required></td>
						<td class="require_field">*</td>
					</tr>
					<tr>
						<td>Location : </td>
						<td><input id="event_location_input" type="text" placeholder="enter location here"></td>
					</tr>
					<tr>
						<td>Your Email : </td>
						<td><input id="request_mail_input" type="text" placeholder="enter mail here" required></td>
						<td class="require_field">*</td>
					</tr>
					<tr>
						<td>Your Name : </td>
						<td><input id="request_name_input" type="text" placeholder="enter name here" required></td>
						<td class="require_field">*</td>
					</tr>
				</table>

				<div id="proposals">
					<table id="proposal_table" class="table">
						<tbody></tbody>
					</table>
				</div>

				<button type="submit" class="btn btn-success" id="send_request_btn">	
					 <span class="glyphicon glyphicon-send"></span> &nbsp Send
				</button>

				<br><br>
				<div id="result_alert"></div>
			</from>
		</div>
		<% end %>
	</div>
</div>