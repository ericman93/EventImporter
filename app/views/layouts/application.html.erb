<!DOCTYPE html>
<html>
<head>
  <title>Scheddy</title>
  <%= stylesheet_link_tag    "lib/bootstrap.min" %>
  <%#= stylesheet_link_tag    "lib/bootstrap-responsive.min" %>
  <%= stylesheet_link_tag    "lib/ct-navbar" %>
  <%= stylesheet_link_tag    "lib/pe-icon-7-stroke" %>
  <%= stylesheet_link_tag    "lib/login-register" %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "pop_up" %>
  
  <%= yield :stylesheets %>

  <%= javascript_include_tag "lib/jquery-2.1.1.min" %>
  <%= javascript_include_tag "lib/bootstrap.min" %>
  <%= javascript_include_tag 'lib/jquery_ujs' %>
  <%= javascript_include_tag 'lib/login-register' %>
  <%= javascript_include_tag "date_helper" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "pop_up" %>
  <%= javascript_include_tag "lib/ct-navbar" %>
  <%= yield :javascripts %>
  
  <%= csrf_meta_tags %>

  <script>
    $(function () {
      var show_login = <%= params[:show_login] || false  %>;
      if(show_login == true){
        openLoginModal();
      }
    });
  </script>
</head>
<body>

<div id="pop_up_stuff">
    <div id="toPopup">    	
        <div class="close"></div>
        <div id="popup_content" class="center_popup"> 
          <%= yield :popup_content %>
        </div>
    </div>
    <div id="backgroundPopup"></div>
</div>

<%= render "layouts/google_analytics" %>
<%= render "layouts/error" %>
<%= render "layouts/loading" %>
<%= render "layouts/popup" %>
<%= render "layouts/yes_or_no" %>

<% unless current_page?(root_path) %>
  <%= render "layouts/navbar" %>
<% end %>

<% if @current_username.nil? %>
  <%= render "layouts/login_regiester" %>
<% end %>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
