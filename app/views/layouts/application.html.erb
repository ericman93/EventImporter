<!DOCTYPE html>
<html>
<head>
  <title>Scheddy</title>
  <%= stylesheet_link_tag    "lib/bootstrap.min" %>
  <%= stylesheet_link_tag    "lib/bootstrap-responsive.min" %>
  <%= stylesheet_link_tag    "lib/ct-navbar" %>
  <%= stylesheet_link_tag    "lib/pe-icon-7-stroke" %>
  <%= stylesheet_link_tag    "lib/login-register" %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "pop_up" %>
  
  <%= yield :stylesheets %>

  <%= javascript_include_tag "lib/jquery-2.1.1.min" %>
  <%= javascript_include_tag "lib/bootstrap.min" %>
  <%= javascript_include_tag 'lib/jquery_ujs' %>
  <%= javascript_include_tag 'lib/login-register' %>
  <%= javascript_include_tag "date_helper" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "pop_up" %>
  <%= javascript_include_tag "lib/ct-navbar" %>
  <%= yield :javascripts %>
  
  <%= csrf_meta_tags %>
</head>
<body>

<div id="pop_up_stuff">
    <div id="toPopup">    	
        <div class="close"></div>
        <div id="popup_content" class="center_popup"> 
          <%= yield :popup_content %>
        </div>
    </div>
    <div id="loadingPopup" class="center_popup">
      <h1>Loading</h1>
    </div>
    <div id="backgroundPopup"></div>
</div>

<nav class="navbar navbar-ct-blue navbar-fixed-top navbar-transparent" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand navbar-brand-logo" href="http://www.creative-tim.com">
                <!--div class="logo">
                    <img src="https://s3.amazonaws.com/creativetim_bucket/new_logo.png">
                </div-->
                <div class="brand"> Scheddy </div>
              </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
                    <% if !@current_user.nil? %>
                      <li>
                        <a href="\<%= @current_user.user_name %>" >
                            <i class="pe-7s-date"></i>
                            <p>Calendar</p>
                        </a>
                      </li>
                      <li>
                          <a href="<%= url_for(requests_path) %>">
                              <i class="pe-7s-mail">
                                  <span class="label" id="request_count"> </span>  
                              </i>
                              <p>Requests</p>
                          </a>
                      </li>

                      <li>
                          <a href="<%= url_for(settings_mails_path) %>">
                              <i class="pe-7s-tools"></i>
                              <p>Settings</p>
                          </a>
                      </li>
                    <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="pe-7s-user"></i>
                        <p>Account</p>
              </a>
              <ul class="dropdown-menu">
                <% if !@current_user.nil? %>
                  <li><a href="<%= url_for(logout_path) %>">Logout</a></li>
                <% else %>
                  <li><a href="javascript:void(0)" onclick="openLoginModal();">Login</a></li>
                  <li><a href="javascript:void(0)" onclick="openRegisterModal();">Sign up</a></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
</nav>

<% if @current_user.nil? %>
  <div class="modal fade login" id="loginModal">
            <div class="modal-dialog login animated">
                <div class="modal-content">
                      <div class="modal-body">  
                          <div class="box">
                               <div class="content">
                                  <div class="error"></div>
                                  <div class="form loginBox">
                                      <%= form_tag({action: "authorize", controller: "permissions"}) do %>
                                        <input id="username" class="form-control" type="text" placeholder="Username" name="username">
                                        <input id="password" class="form-control" type="password" placeholder="Password" name="password">
                                        <input class="btn btn-default btn-login" type="button" value="Login" onclick="loginAjax()">
                                      <% end %>
                                  </div>
                               </div>
                          </div>
                          <div class="box">
                              <div class="content registerBox" style="display:none;">
                               <div class="form">
                                  <%= form_for(@user) do |f| %>
                                    <%= f.text_field :first_name, :class => "input form-control", :placeholder => "First name", :required => true %>       
                                    <%= f.text_field :last_name, :class => "input form-control", :placeholder => "Last name", :required => true %>       
                                    <%= f.text_field :user_name, :class => "input form-control", :placeholder => "Username" ,:required => true, :pattern => '[^-\s]*', :title => 'Spaces are not allowed' %>       
                                    <%= f.email_field :email, :class => "input form-control", :placeholder => "Email", :required => true %>
                                    <%= f.password_field :password, :class => "input form-control", :placeholder => "Password", :required => true %>  

                                    <%= f.submit 'Register', :class => 'btn btn-default btn-register' %>
                                <% end %>
                                  </div>
                              </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                          <div class="forgot login-footer">
                              <span>Looking to 
                                   <a href="javascript: showRegisterForm();">create an account</a>
                              ?</span>
                          </div>
                          <div class="forgot register-footer" style="display:none">
                               <span>Already have an account?</span>
                               <a href="javascript: showLoginForm();">Login</a>
                          </div>
                      </div>        
                </div>
            </div>
  </div>
<% end %>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
