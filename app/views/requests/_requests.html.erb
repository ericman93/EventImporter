</script>

<div id="requests" class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @requests.each do |request| %>
        <div class="panel panel-default" id="request-panel-<%=request.id%>">
            <div class="panel-heading" role="tab" id="request_<%=request.id%>">
              <div class="remove-request" onclick="deleteRequest(<%=request.id%>)">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </div>
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#requests" href="#collapse<%=request.id%>" aria-expanded="false" aria-controls="collapse<%=request.id%>">
                  <%= request.subject %> from <%= request.return_name %>
                </a>
              </h4>
            </div>
            <div id="collapse<%=request.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="request_<%=request.id%>">
              <div class="panel-body">
                <% request.request_proposals.each do |proposal| %>
                    <div class="proposal" id="prop_<%= proposal.id %>">
                      <div class="proposal-approval">
                          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                      </div>
                      <div onclick="proposal_selected(<%= proposal.id %>, <%= proposal.start_time.to_json %>, <%= proposal.end_time.to_json %>)">
                          <span class="proposal-date"><%= proposal.start_time.localtime.strftime('%d/%m') %></span>
                          :
                          <%= proposal.start_time.localtime.strftime('%H:%M') %>
                          -
                          <%= proposal.end_time.localtime.strftime('%H:%M') %>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
        </div>
    <% end %>
</div>

<div id='calendar'></div>