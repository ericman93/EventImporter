<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "settings" %>
<% end %>

<div class="">

<% if !notice.nil? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= notice %>
    </div>
<% end %>

<% if !@user.nil? && !@user.errors.empty? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= @user.errors.full_messages.first %>
    </div>
<% end %>

<div id="options">
    <ul class="nav nav-pills nav-stacked">
        <li id="work_hours" class="setting_option">
            <%= link_to settings_hours_path, class: current_page(settings_hours_path) do %>
                <span class="glyphicon glyphicon-time"></span> Work Hours
            <% end %>
        </li>
        <li id="web_mails" class="setting_option">
            <%= link_to settings_mails_path, class: current_page(settings_mails_path) do %>
                <span class="glyphicon glyphicon-envelope"></span> Web Mail
            <% end %>
        </li>
        <li id="services" class="setting_option">
            <%= link_to settings_services_path, class: current_page(settings_services_path) do %>
                <span class="glyphicon glyphicon-shopping-cart"></span> Services
            <% end %>
        </li>
        <li id="user" class="setting_option">
            <%= link_to settings_user_path, class: current_page(settings_user_path) do %>
                <span class="glyphicon glyphicon-user"></span> User Settings
            <% end %>
        </li>
    </ul>
</div>

<div id="setting_content">
    <div id="option_data">
        <%= yield :setting_data %>
    </div>

    <div id="update_result">
        <% notice %>
    </div>
</div>
</div>