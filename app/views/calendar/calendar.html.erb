<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "lib/jquery-ui.min" %>
	<%= stylesheet_link_tag "lib/fullcalendar" %>
	<%= stylesheet_link_tag "calendar-common" %>	
	<%= stylesheet_link_tag "calendar" %>
<% end %>
<% content_for :javascripts do %>
	<%= javascript_include_tag "lib/jquery-ui.custom.min" %>
	<%= javascript_include_tag "lib/fullcalendar.min" %>
	<%= javascript_include_tag "lib/mailcheck.min" %>
	<%= javascript_include_tag "calendar" %>
	<%= javascript_include_tag "calendar_work_day" %>
	<%= javascript_include_tag "calendar-common" %>
<% end %>

<script>
	$(document).ready(function () {
	        var user_mail = '<%= @user_name %>';
	        //var is_user_specifed = check_if_user_null(user_mail)

			// ths client user can easly change thos. 
			// maybe needed to send to the server the service id, and take from there the duration
	        load_event_to_calendar(user_mail, true, <%= (@current_user.nil? or @user_name != @current_user.user_name) or @is_local_events %>, <%= @is_local_events %>, <%= !@services.empty? %>);

	        $('.importer').change(function () {

	            //$(this).closest("form").ajaxForm();
	            $(this).closest("form").submit();
	        });
	    });
</script>

<div id="request-info">
	<% if !@services.empty? %>
		<select class="btn btn-default dropdown-toggle select-space btn-block" id="services">
			<% @services.each do |service| %>
				<option value="<%= service.time_in_minutes %>"><%= service.name %></option>
			<% end %>
		</select>
	<% end %>

	<% if !((@current_user != nil) and (@user_name == @current_user.user_name)) %>
		<%= render "calendar/request_info.html.erb" %>
	<% elsif @current_user != nil and @user_name == @current_user.user_name and @is_local_events %>
		<input type="button" class="btn btn-info calendar-action" value="Save" id="btnSaveLocal" onclick="saveLocalEvents()" />
	<% end %>
</div>

<div id='calendar'></div>